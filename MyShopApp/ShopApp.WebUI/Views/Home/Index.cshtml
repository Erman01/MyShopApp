@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>

@foreach (var product in Model)
{
<div class="col-md-3" style="height:300px; padding:10px;margin:10px;border:solid thin whitesmoke">
    <div class="col-md-12">
        <img class="img-responsive" style="height:160px" src="~/Content/ProductImages/@product.Image" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(product.Name, "Details", new { id = product.Id })</strong>
    </div>
    <div class="col-md-12">
        <p>@product.Description</p>
    </div>
    <div class="col-md-12">
        <h4>£@product.Price</h4>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-primary">Add to Basket</a>
    </div>
</div>
}
<div class="col-md-12 clearfix"></div>